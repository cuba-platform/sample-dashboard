<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.company.dashboard.web.mainwindow.ExtAppMainWindow"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd"
        xmlns:main="http://schemas.haulmont.com/cuba/mainwindow.xsd">
    <dsContext>
        <collectionDatasource id="routeDs"
                              class="com.company.dashboard.route.Route"
                              refreshMode="NEVER"/>
    </dsContext>
    <layout>
        <cssLayout height="100%"
                   responsive="true"
                   stylename="responsive-all"
                   width="100%">
            <hbox expand="mainbody"
                  height="100%"
                  stylename="main-container"
                  width="100%">
                <vbox expand="sideMenu"
                      height="100%"
                      stylename="leftmenu"
                      width="200px">
                    <vbox stylename="userbar">
                        <label id="logo"
                               icon="icons/taxi.png"
                               stylename="logo"/>
                    </vbox>
                    <main:sideMenu id="sideMenu"
                                   loadMenuConfig="false"
                                   stylename="sidemenu"
                                   width="100%"/>
                    <link icon="icons/cubalogo-full.png"
                          stylename="cuba-full-link"
                          target="_blank"
                          url="https://www.cuba-platform.com"/>
                    <link icon="icons/cubalogo.png"
                          stylename="cubalink"
                          target="_blank"
                          url="https://www.cuba-platform.com"/>
                </vbox>
                <vbox id="mainbody"
                      expand="userPanels"
                      height="100%"
                      stylename="mainbody">
                    <cssLayout width="100%">
                        <hbox expand="heading"
                              margin="true"
                              spacing="true"
                              width="100%">
                            <popupButton id="popupButton"
                                         stylename="open-menu-button">
                                <actions>
                                    <action id="dashboardButton"
                                            caption="msg://dashboard"
                                            icon="icons/dashboard_white.png"
                                            invoke="buttonNotImplementedAction"/>
                                    <action id="carsButton"
                                            caption="msg://cars"
                                            icon="icons/car_white.png"
                                            invoke="buttonNotImplementedAction"/>
                                    <action id="ordersButton"
                                            caption="msg://orders"
                                            icon="icons/list_white.png"
                                            invoke="buttonNotImplementedAction"/>
                                    <action id="reportsButton"
                                            caption="msg://reports"
                                            icon="icons/report_white.png"
                                            invoke="buttonNotImplementedAction"/>
                                    <action id="settingsButton"
                                            caption="msg://settings"
                                            icon="icons/settings_white.png"
                                            invoke="buttonNotImplementedAction"/>
                                    <action id="logoutButton"
                                            caption="msg://signOut"
                                            invoke="signOut"/>
                                </actions>
                            </popupButton>
                            <label id="heading"
                                   stylename="header"
                                   value="Dashboard"/>
                            <button description="msg://notifications"
                                    icon="icons/notifications.png"
                                    invoke="buttonNotImplementedAction"
                                    stylename="notifications-button"/>
                            <button description="msg://signOut"
                                    icon="icons/power-button.png"
                                    invoke="signOut"
                                    stylename="logout-button-cst"/>
                        </hbox>
                        <chart:serialChart id="greenSerialChart"
                                           addClassNames="true"
                                           autoMargins="true"
                                           categoryField="year"
                                           creditsPosition="bottom-left"
                                           height="188px"
                                           marginBottom="26"
                                           marginLeft="20"
                                           marginRight="20"
                                           marginTop="60"
                                           stylename="panel-top-container panel"
                                           theme="NONE"
                                           width="100%">
                            <chart:allLabels>
                                <chart:label bold="true"
                                             size="14"
                                             text="msg://bookings"
                                             x="10"
                                             y="10"/>
                                <chart:label id="green-thin"
                                             bold="false"
                                             size="35"
                                             text="1870"
                                             x="10"
                                             y="30"/>
                            </chart:allLabels>
                            <chart:valueAxes>
                                <chart:axis axisAlpha="0"
                                            gridAlpha="0"
                                            labelsEnabled="false"
                                            position="LEFT"
                                            stackType="REGULAR"/>
                            </chart:valueAxes>
                            <chart:chartCursor bulletsEnabled="false"
                                               categoryBalloonEnabled="false"
                                               cursorAlpha="1"
                                               cursorColor="#67BFF4"
                                               selectionAlpha="1"
                                               valueBalloonsEnabled="false"
                                               valueLineBalloonEnabled="false"
                                               valueLineEnabled="false"/>
                            <chart:balloon borderAlpha="0.4"
                                           borderColor="#67BFF4"
                                           color="#67BFF4"
                                           fillAlpha="0.8"/>
                            <chart:graphs>
                                <chart:graph fillAlphas="1"
                                             lineAlpha="0"
                                             showBalloon="true"
                                             title="Cars"
                                             type="COLUMN"
                                             valueField="value">
                                    <chart:fillColors>
                                        <chart:color value="#67BFF4"/>
                                    </chart:fillColors>
                                </chart:graph>
                                <chart:graph fillAlphas="1"
                                             lineAlpha="0"
                                             showBalloon="true"
                                             title="All"
                                             type="COLUMN"
                                             valueField="backValue">
                                    <chart:fillColors>
                                        <chart:color value="#EFEFEF"/>
                                    </chart:fillColors>
                                </chart:graph>
                            </chart:graphs>
                            <chart:categoryAxis axisAlpha="0"
                                                axisColor="#DADADA"
                                                gridAlpha="0"
                                                labelFrequency="0"
                                                labelsEnabled="false"
                                                startOnAxis="false"/>
                        </chart:serialChart>
                        <chart:serialChart id="redLineChart"
                                           addClassNames="true"
                                           autoMargins="true"
                                           categoryField="year"
                                           creditsPosition="bottom-left"
                                           height="188px"
                                           marginBottom="26"
                                           marginLeft="20"
                                           marginRight="20"
                                           marginTop="70"
                                           stylename="panel-top-container panel"
                                           theme="NONE"
                                           width="100%">
                            <chart:allLabels>
                                <chart:label bold="true"
                                             size="14"
                                             text="msg://inProgress"
                                             x="10"
                                             y="10"/>
                                <chart:label id="blue-thin"
                                             bold="false"
                                             size="35"
                                             text="126"
                                             x="10"
                                             y="30"/>
                            </chart:allLabels>
                            <chart:valueAxes>
                                <chart:axis axisAlpha="0"
                                            gridAlpha="0"
                                            labelsEnabled="false"
                                            position="LEFT"
                                            stackType="REGULAR"/>
                            </chart:valueAxes>
                            <chart:chartCursor bulletsEnabled="true"
                                               categoryBalloonEnabled="false"
                                               cursorAlpha="0"
                                               selectionAlpha="0"
                                               valueBalloonsEnabled="true"
                                               valueLineBalloonEnabled="false"
                                               valueLineEnabled="false"/>
                            <chart:balloon borderAlpha="0.4"
                                           borderColor="#4085FC"
                                           borderThickness="2"
                                           color="#4085FC"
                                           fillAlpha="0.8"
                                           fillColor="WHITE"
                                           fixedPosition="false"
                                           shadowAlpha="0"/>
                            <chart:graphs>
                                <chart:graph fillAlphas="0.4"
                                             lineAlpha="1"
                                             lineColor="#BCF3EE"
                                             lineThickness="2"
                                             showBalloon="true"
                                             title="Cars"
                                             type="LINE"
                                             valueField="value">
                                    <chart:fillColors>
                                        <chart:color value="#BCF3EE"/>
                                    </chart:fillColors>
                                </chart:graph>
                            </chart:graphs>
                            <chart:categoryAxis axisAlpha="0"
                                                axisColor="#DADADA"
                                                gridAlpha="0.1"
                                                gridColor="#000000"
                                                labelFrequency="0"
                                                labelsEnabled="false"
                                                startOnAxis="true"/>
                        </chart:serialChart>
                        <chart:serialChart id="greenLineChart"
                                           addClassNames="true"
                                           autoMargins="true"
                                           categoryField="year"
                                           creditsPosition="bottom-left"
                                           height="188px"
                                           marginBottom="26"
                                           marginLeft="20"
                                           marginRight="20"
                                           marginTop="70"
                                           stylename="panel-top-container panel"
                                           theme="NONE"
                                           width="100%">
                            <chart:allLabels>
                                <chart:label bold="true"
                                             size="14"
                                             text="msg://averageTripTime"
                                             x="10"
                                             y="10"/>
                                <chart:label id="yellow-thin"
                                             bold="false"
                                             size="35"
                                             text="42"
                                             x="10"
                                             y="30"/>
                            </chart:allLabels>
                            <chart:valueAxes>
                                <chart:axis axisAlpha="0"
                                            gridAlpha="0"
                                            labelsEnabled="false"
                                            position="LEFT"
                                            stackType="REGULAR"/>
                            </chart:valueAxes>
                            <chart:chartCursor bulletsEnabled="true"
                                               categoryBalloonEnabled="false"
                                               cursorAlpha="0"
                                               selectionAlpha="0"
                                               valueBalloonsEnabled="true"
                                               valueLineBalloonEnabled="false"
                                               valueLineEnabled="false"/>
                            <chart:balloon borderAlpha="0.4"
                                           borderColor="#6ED329"
                                           borderThickness="2"
                                           color="#6ED329"
                                           fillAlpha="0.8"
                                           fillColor="WHITE"
                                           fixedPosition="false"
                                           shadowAlpha="0"/>
                            <chart:graphs>
                                <chart:graph bullet="ROUND"
                                             bulletBorderAlpha="1"
                                             bulletColor="#FFFFFF"
                                             fillAlphas="0"
                                             lineAlpha="0.6"
                                             lineColor="#6ED329"
                                             lineThickness="2"
                                             showBalloon="true"
                                             title="Cars"
                                             type="LINE"
                                             useLineColorForBulletBorder="true"
                                             valueField="value">
                                    <chart:fillColors>
                                        <chart:color value="#6ED329"/>
                                    </chart:fillColors>
                                </chart:graph>
                            </chart:graphs>
                            <chart:categoryAxis axisAlpha="0"
                                                axisColor="#DADADA"
                                                gridAlpha="0"
                                                labelFrequency="0"
                                                labelsEnabled="false"
                                                startOnAxis="false"/>
                        </chart:serialChart>
                        <chart:serialChart id="blueSerialChart"
                                           addClassNames="true"
                                           autoMargins="true"
                                           categoryField="year"
                                           creditsPosition="bottom-left"
                                           height="188px"
                                           marginBottom="26"
                                           marginLeft="20"
                                           marginRight="20"
                                           marginTop="60"
                                           stylename="panel-top-container panel"
                                           theme="NONE"
                                           width="100%">
                            <chart:allLabels>
                                <chart:label bold="true"
                                             size="14"
                                             text="msg://online"
                                             x="10"
                                             y="10"/>
                                <chart:label id="red-thin"
                                             bold="false"
                                             size="35"
                                             text="131"
                                             x="10"
                                             y="30"/>
                            </chart:allLabels>
                            <chart:valueAxes>
                                <chart:axis axisAlpha="0"
                                            gridAlpha="0"
                                            labelsEnabled="false"
                                            position="LEFT"
                                            stackType="REGULAR"/>
                            </chart:valueAxes>
                            <chart:chartCursor categoryBalloonAlpha="0"
                                               categoryBalloonEnabled="false"
                                               cursorAlpha="0"
                                               cursorColor="#3A56E8"
                                               selectionAlpha="1"
                                               valueBalloonsEnabled="false"
                                               valueLineBalloonEnabled="false"
                                               valueLineEnabled="false"/>
                            <chart:balloon borderAlpha="0.4"
                                           borderColor="#3A56E8"
                                           color="#3A56E8"
                                           fillAlpha="0.8"
                                           fixedPosition=""/>
                            <chart:graphs>
                                <chart:graph fillAlphas="1"
                                             lineAlpha="0"
                                             showBalloon="true"
                                             title="Cars"
                                             type="COLUMN"
                                             valueField="value">
                                    <chart:fillColors>
                                        <chart:color value="#4085fc"/>
                                    </chart:fillColors>
                                </chart:graph>
                                <chart:graph fillAlphas="1"
                                             lineAlpha="0"
                                             showBalloon="true"
                                             title="All"
                                             type="COLUMN"
                                             valueField="backValue">
                                    <chart:fillColors>
                                        <chart:color value="#EFEFEF"/>
                                    </chart:fillColors>
                                </chart:graph>
                            </chart:graphs>
                            <chart:categoryAxis axisAlpha="0"
                                                axisColor="#DADADA"
                                                gridAlpha="0"
                                                labelFrequency="0"
                                                labelsEnabled="false"
                                                startOnAxis="false"/>
                        </chart:serialChart>
                    </cssLayout>
                    <cssLayout id="userPanels"
                               responsive="true"
                               stylename="responsive"
                               width="100%">
                        <chart:mapViewer id="map"
                                         height="100%"
                                         stylename="panel-full-container panel"
                                         width="100%"/>
                        <chart:pieChart id="pieChart"
                                        addClassNames="true"
                                        angle="0"
                                        colorField="color"
                                        creditsPosition="bottom-left"
                                        depth3D="0"
                                        height="50%"
                                        labelsEnabled="false"
                                        marginTop="35"
                                        radius="35%"
                                        startDuration="1"
                                        stylename="pie-chart panel-container panel"
                                        titleField="type"
                                        valueField="class"
                                        width="100%">
                            <chart:legend align="CENTER"
                                          autoMargins="true"
                                          equalWidths="false"
                                          markerType="CIRCLE"
                                          position="BOTTOM"/>
                            <chart:allLabels>
                                <chart:label bold="true"
                                             size="14"
                                             text="msg://carDelivery"
                                             x="10"
                                             y="10"/>
                            </chart:allLabels>
                        </chart:pieChart>
                        <vbox height="100%"
                              stylename="panel-container panel-table panel">
                            <table id="routesTable"
                                   caption="msg://rides"
                                   columnHeaderVisible="false"
                                   height="100%"
                                   showSelection="false"
                                   stylename="color-table"
                                   width="100%">
                                <columns>
                                    <column id="time"
                                            width="70px"/>
                                    <column id="departure"
                                            align="CENTER"/>
                                    <column id="direction"
                                            width="40px"/>
                                    <column id="arrival"
                                            align="CENTER"/>
                                </columns>
                                <rows datasource="routeDs"/>
                            </table>
                        </vbox>
                    </cssLayout>
                </vbox>
            </hbox>
        </cssLayout>
    </layout>
</window>
